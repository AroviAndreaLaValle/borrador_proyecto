<div class="formulario_comentarios" style="padding-top: 160px;">

    <h4>Ingresa aquí:</h4>

    <form action="/admin/login" method="post">

        <input type="text" id="usuario" name="usuario" required placeholder="Usuario: " autofocus="autofocus">

        <input type="password" id="password" name="password" required placeholder="Contraseña: ">

        <center><input type="submit" value="Ingresar"></center>

    </form>

    {{#if error}}
    <p>Usuario no existe</p>
    {{/if}}
</div>